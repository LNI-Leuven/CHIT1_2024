# Fontsizes
font.size        : 16 # (typically small ) controls default text sizes
axes.titlesize   : 16 # (typically small ) fontsize of the axes title
axes.labelsize   : 16 # (typically medium) fontsize of the x and y labels
xtick.labelsize  : 16 # (typically small ) fontsize of the tick labels
ytick.labelsize  : 16 # (typically small ) fontsize of the tick labels
legend.fontsize  : 16 # (typically small ) legend fontsize
figure.titlesize : 16 # (typically large ) fontsize of the figure title

# Setting fontsets. See `~/.cache/matplotlb/fontlist-v330.json`
mathtext.fontset : cm
font.family : Myriad Pro

# Figsize and export params
figure.figsize : 5, 5
figure.dpi : 300
savefig.dpi : 300
savefig.bbox : tight
savefig.facecolor : "white"
